#include <stdio.h>
int fact(int n) {
    if (n == 0|| n == 1)
        return 1;             
    return n * fact(n - 1);
}
int main() {
    int n;
    printf("Enter the value for n: ");
    scanf("%d", &n);
    int f = fact(n);       
    printf("The factorial of the given number is: %d", f);
    return 0;
}


